@inherits UmbracoViewPage
@{ 
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <base href="/">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta property="og:title" content="">
    <meta property="og:description" content="">
    <meta property="og:image" content="">
    <meta property="og:url" content="">
    <meta property="keywords" content="" />
    <title>RegiFlow</title>
    <link rel="canonical" href="">
    <link rel="icon" type="image/svg" href="" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/dist/main.min.css" />
</head>
<body>
    <header class="sticky-top">
        <nav class="navbar navbar-expand-md border-bottom">
            <div class="container container-fluid">
                <a class="navbar-brand navbar__brand d-flex" href="/">
                    <span class="navbar__brand--primary">Regi</span>
                    <span class="navbar__brand--secondary">Flow</span>
                </a>
                <div class="d-flex d-md-none justify-content-end">
                    <a class="btn btn--secondary"
                       href="/"
                       target="_self">Sign in</a>
                </div>
                <div class="d-none d-md-flex justify-content-end">
                    <div class="d-flex flex-column flex-md-row mt-5 mt-md-0">
                        <a class="btn btn--secondary me-md-2"
                           href="/"
                           target="_self">Sign in</a>
                        <a class="btn btn--primary mt-2 mt-md-0"
                           href="/"
                           target="_self">Sign up</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <main>
        <div class="page--wrapper">
            @RenderBody()
        </div>
    </main>
    <footer>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/dist/main.min.js"></script>
    @RenderSection("postContentScripts", required: false)
</body>
</html>